<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".Activity_CreateEvent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorTopActionBar"
        android:id="@+id/fragment_event">
        <android.support.v7.widget.Toolbar
            android:background="@color/colorPrimaryDark"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/toolbar"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create An Event"
            android:id="@+id/createEventPageTitle"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center_horizontal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title: "
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            />
        <EditText
            android:id="@+id/event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:maxLines="4"
            >
            <requestFocus />
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Type"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="24dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trash"
                android:textAllCaps="false"
                android:id="@+id/check_trash"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="24dp"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Air"
                android:textAllCaps="false"
                android:id="@+id/check_air"
                android:layout_toRightOf="@id/check_trash"
                android:layout_marginLeft="48dp"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Water"
                android:textAllCaps="false"
                android:id="@+id/check_water"
                android:layout_below="@id/check_trash"
                android:layout_marginLeft="24dp"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soil"
                android:textAllCaps="false"
                android:id="@+id/check_soil"
                android:layout_below="@id/check_air"
                android:layout_toRightOf="@id/check_water"
                android:layout_marginLeft="48dp"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Plant"
                android:textAllCaps="false"
                android:id="@+id/check_plant"
                android:layout_below="@id/check_water"
                android:layout_marginLeft="24dp"
                />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"
                android:textAllCaps="false"
                android:id="@+id/check_other"
                android:layout_below="@id/check_soil"
                android:layout_toRightOf="@id/check_plant"
                android:layout_marginLeft="48dp"
                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description: "
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            />
        <EditText
            android:id="@+id/event_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:maxLines="4"
            >
            <requestFocus />
        </EditText>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Date:"
            android:textAllCaps="false"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="24dp"
            android:textColor="@color/colorPrimaryDark"
            />
        <Button
            android:id="@+id/set_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="Set Date"
            android:textAllCaps="false"
           />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/selected_date"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="24dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Create"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:layout_marginTop="24dp"
            android:id="@+id/create_event"
            android:textAllCaps="false"
            />
    </LinearLayout>
    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/drawer_event"/>
</android.support.v4.widget.DrawerLayout>