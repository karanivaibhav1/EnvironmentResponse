<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:id="@+id/task1"
    android:background="#E0F2F1">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginTop="4dp"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="4dp"
            android:id="@+id/issue_image"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:id="@+id/issue_title"
                android:layout_toRightOf="@id/issue_image"
                android:textColor="@color/TextColour"
                android:textSize="20dp"
                android:text="Avatar"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:id="@+id/issue_type"
                android:textColor="@color/TextColour"
                android:layout_below="@+id/issue_title"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/issue_reporter"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:textColor="@color/TextColour"
                android:layout_below="@+id/issue_type"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/issue_date"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:textColor="@color/TextColour"
                android:layout_below="@+id/issue_reporter"/>

        </LinearLayout>

    </LinearLayout>


    <TextView
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location"
        android:layout_gravity="center"
        android:textColor="@color/TextColour"
        android:layout_below="@+id/issue_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:layout_marginTop="5dp"
        android:id="@+id/issue_description"
        android:layout_gravity="center"
        android:textColor="@color/TextColour"
        android:layout_below="@+id/location"/>

</LinearLayout>