<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F2F1"
    android:id="@+id/fragment_legal"
    tools:context="com.test.vaibhav.environmentresponse.MapsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:textSize="18dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:text="Legal Page"
        android:textColor="@color/TextColour"
        android:id="@+id/legal_page_title"
        android:clickable="false"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:id="@+id/button1"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/legal_page_title"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About This App"
        android:textSize="15dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:layout_below="@id/button1"
        android:layout_marginLeft="20dp"
        android:id="@+id/about_this_app"
        android:layout_alignParentLeft="true"
        android:textColor="@color/TextColour"
        android:clickable="true"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:id="@+id/button2"
        android:layout_below="@+id/about_this_app"
        android:background="@color/colorPrimaryDark"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terms and Conditions"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="false"
        android:layout_below="@id/button2"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/t_and_c"
        android:layout_alignParentLeft="true"
        android:textColor="@color/TextColour"
        android:clickable="true"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:id="@+id/button3"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/t_and_c"
        android:background="@color/colorPrimaryDark"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Privacy Policy"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:layout_below="@id/button3"
        android:textSize="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/privacy_policy"
        android:layout_alignParentLeft="true"
        android:textColor="@color/TextColour"
        android:clickable="true"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="10dp"
        android:id="@+id/button4"
        android:layout_below="@+id/privacy_policy"
        android:background="@color/colorAccent"
        />
</RelativeLayout>